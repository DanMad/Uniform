{
  "extends": ["tslint:recommended", "tslint-react", "tslint-config-prettier"],
  "rules": {
    "interface-name": false,
    "member-access": [true, "no-public"],
    "variable-name": {
      "options": [
        "allow-snake-case",
        "allow-pascal-case",
        "require-const-for-all-caps"
      ]
    },
    "quotemark": [true, "backtick"]
  },
  "linterOptions": {
    "exclude": [
      "config/**/*.js",
      "node_modules/**/*.ts",
      "coverage/lcov-report/*.js"
    ]
  }
}
